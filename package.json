{
  "name": "postfoo-server",
  "version": "1.0.0",
  "description": "Post Foo is project for tracking personal finance",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:gql": "copyfiles src/**/*.graphql dist -u 1",
    "build:incr": "tsc -p tsconfig.json --incremental --tsBuildInfoFile dist/tsbuildinfo",
    "build:watch": "npm run build:incr -- --watch",
    "build:ondistchange": "onchange -k -i 'dist/**' -- npm run start:node",
    "build:ongqlchange": "onchange -k 'src/**/*.graphql' -- copyfiles '{{file}}' dist -u 1",
    "build:clean": "rimraf dist/*",
    "start": "npm run db:deploy && npm run start:node",
    "start:node": "node -- dist/index.js",
    "dev": "npm run build:gql && npm run build:incr && concurrently -kr npm:build:watch npm:build:ongqlchange npm:build:ondistchange",
    "db:init": "prisma migrate dev --name init",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "types:checks": "tsc -p tsconfig.json --extendedDiagnostics",
    "test": "exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/umakantp/postfoo-server.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/umakantp/postfoo-server/issues"
  },
  "homepage": "https://github.com/umakantp/postfoo-server#readme",
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.12.1",
    "@stylistic/eslint-plugin-js": "^2.12.1",
    "@stylistic/eslint-plugin-ts": "^2.12.1",
    "@total-typescript/ts-reset": "^0.6.1",
    "@types/graphql-resolvers": "^0.3.2",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "concurrently": "^9.1.1",
    "copyfiles": "^2.4.1",
    "onchange": "^7.1.0",
    "prisma": "^6.1.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@graphql-tools/load-files": "^7.0.0",
    "@graphql-tools/merge": "^9.0.15",
    "@graphql-tools/schema": "^10.0.14",
    "@prisma/client": "^6.1.0",
    "chalk": "^5.4.1",
    "fastify": "^5.2.0",
    "graphql": "^16.10.0",
    "graphql-resolvers": "^0.4.2",
    "mercurius": "^16.0.0",
    "module-alias": "^2.2.3",
    "tslib": "^2.8.1"
  },
  "_moduleAliases": {
    "src": "dist"
  }
}
